<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UserApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="btn_style" parent="Theme.UserApp">
        <item name="backgroundTint">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inset">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="btn_style_step_active" parent="btn_style">
        <item name="backgroundTint">@color/purple</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="btn_style_step_inactive" parent="btn_style">
        <item name="backgroundTint">@color/light_gray</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="text_filed_layout" parent="Theme.UserApp">
        <item name="boxBackgroundColor">@color/text_field</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="text_filed" parent="Theme.UserApp">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="progress_style" parent="Theme.UserApp">
        <item name="android:progressTint">@color/white</item>
        <item name="android:width">50dp</item>
        <item name="android:height">50dp</item>
    </style>
</resources>